<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LeccionActivity">


    <Button
        android:id="@+id/btnOpcion1"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/btn_green"
        android:fontFamily="sans-serif-black"
        android:text="Opcion 1"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btnOpcion2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnOpcion2"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/btn_green"
        android:fontFamily="sans-serif-black"
        android:text="Opcion 2"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btnOpcion3"
        app:layout_constraintEnd_toEndOf="@+id/btnOpcion1"
        app:layout_constraintStart_toStartOf="@+id/btnOpcion3" />

    <Button
        android:id="@+id/btnOpcion3"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/btn_green"
        android:fontFamily="sans-serif-black"
        android:text="Opcion 3"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btnOpcion4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnOpcion4"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_green"
        android:fontFamily="sans-serif-black"
        android:text="Opcion 4"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btnHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="109dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/txtFrase"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtPalabra"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginBottom="12dp"
        android:text="Teacher"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtFrase"
        android:layout_width="0dp"
        android:layout_height="74dp"
        android:layout_marginStart="67dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="sans-serif-medium"
        android:text="The teacher went to the zoo yesterday."
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnOpcion1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnHome"
        android:layout_width="95dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/ic_paginaprincipal_foreground"
        android:backgroundTint="#35595F"
        android:onClick="home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnPerfil" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="71dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtPalabra"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/progressBar"
        app:srcCompat="@drawable/logomain" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="69dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintStart_toEndOf="@+id/btnVolver" />

    <Button
        android:id="@+id/btnPerfil"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/ic_perfil_foreground"
        android:backgroundTint="#35595F"
        android:onClick="perfil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnSiguiente"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/ic_volver_foreground"
        android:backgroundTint="#35595F"
        app:layout_constraintBottom_toBottomOf="@+id/txtPalabra"
        app:layout_constraintEnd_toStartOf="@+id/progressBar"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnSiguiente"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_form"
        android:text="siguiente"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnPerfil" />

</androidx.constraintlayout.widget.ConstraintLayout>