<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    tools:context=".HomeActivity">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="245dp"
        android:layout_height="30dp"
        android:text="Bienvenido, Juan Manuel"
        android:textColor="#35595F"
        android:textSize="17dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="111dp" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="82dp"
        android:layout_height="59dp"
        app:srcCompat="@drawable/Practice_foreground_foreground"
        tools:layout_editor_absoluteX="276dp"
        tools:layout_editor_absoluteY="562dp" />

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="89dp"
        android:layout_height="62dp"
        app:srcCompat="@drawable/Profile_foreground"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="562dp" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/imageButton9"
        android:layout_width="83dp"
        android:layout_height="61dp"
        app:srcCompat="@drawable/Icone_foreground"
        tools:layout_editor_absoluteX="164dp"
        tools:layout_editor_absoluteY="562dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INERZIA"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#35595F"
        tools:layout_editor_absoluteX="37dp"
